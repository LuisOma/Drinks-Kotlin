<resources>
    <!-- Base application theme. -->
    <style name="AppThemeDefault" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryDark">#0D47A1</item>
        <item name="colorAccent">#2979FF</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:navigationBarColor">#00000000</item>
    </style>

    <style name="ArrBarLayout" parent="Widget.Design.AppBarLayout">
        <!-- Nothing here? -->
    </style>

    <style name="SearchViewTheme" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:editTextColor">?android:textColor</item>
    </style>

    <style name="DrinkNameCollapsed">
        <item name="android:textColor">?colorAccent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DrinkNameExpanded">
        <item name="android:textColor">?android:textColor</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RecipeDateModified">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="InvisibleText">
        <item name="android:textColor">#00000000</item>
    </style>
</resources>